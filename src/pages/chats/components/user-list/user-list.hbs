<div class="{{classes.overlay}}" style="{{#if isHide}} display: none;{{/if}}">
  {{#>slot name="content"}}
    {{#>comp name="Card" className=@root.classes.user-list}}
      {{#>slot name="title"}}
        <div class="{{@root.classes.user-list__title}}">
          Список участников
          {{>comp name="Icon" iconName="close" $click=@root.hideUserList}}
        </div>
      {{/slot}}
      {{#>slot name="body"}}
        {{>comp name="TextField"
                placeholder="Поиск"
                value=@root.searchString
                className=@root.classes.user-list__search
                $enter=search
        }}
        <div class="{{@root.classes.user-list__list}}">
          {{#each @root.users as | user |}}
            {{>comp name="UserView"
                userInfo=user
                currentUserId=@root.currentUserId
                $removeUser=@root.removeUser
                $addUser=@root.addUser
            }}
          {{/each}}
        </div>
      {{/slot}}
      {{#>slot name="actions"}}
        {{>comp name="Button"
            text=(@root.removeChatName) type="stroke"
            className=@root.classes.remove-btn
            $click=@root.removeChat
        }}
      {{/slot}}
    {{/comp}}
  {{/slot}}
</div>